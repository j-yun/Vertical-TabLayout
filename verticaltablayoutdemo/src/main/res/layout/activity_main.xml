<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="q.rorbin.verticaltablayoutdemo.MainActivity">

    <androidx.core.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <q.rorbin.verticaltablayout.VerticalTabLayout
            android:id="@+id/tablayout0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#369DE3"
            app:indicator_color="#FFFFFF"
            app:indicator_gravity="left"
            app:tab_mode="fixed" />

        <q.rorbin.verticaltablayout.VerticalTabLayout
            android:id="@+id/tablayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#EF7062"
            app:indicator_color="#FFFFFF"
            app:indicator_gravity="right"
            app:tab_height="60dp"
            app:tab_mode="scrollable" />

        <q.rorbin.verticaltablayout.VerticalTabLayout
            android:id="@+id/tablayout2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#009687"
            app:indicator_color="#115E56"
            app:indicator_gravity="fill"
            app:indicator_corners="100dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:tab_margin="20dp"
            app:tab_mode="scrollable" />

        <q.rorbin.verticaltablayout.VerticalTabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDEDED"
            app:indicator_color="#FFFFFF"
            app:indicator_gravity="fill"
            app:tab_height="50dp"
            app:tab_mode="scrollable" />
    </LinearLayout>


</RelativeLayout>
